{
    "name": "@figuredev/react-native-local-server",
    "version": "0.17.1",
    "description": "Library for creating a local server on the device running React Native.",
    "main": "lib/commonjs/index",
    "module": "lib/module/index",
    "types": "lib/typescript/src/index.d.ts",
    "react-native": "src/index",
    "source": "src/index",
    "files": [
        "src",
        "lib",
        "android",
        "ios",
        "cpp",
        "react-native-local-server.podspec",
        "!lib/typescript/example",
        "!android/build",
        "!ios/build",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__"
    ],
    "scripts": {
        "example": "yarn --cwd example",
        "check:ts": "tsc --noEmit",
        "check:format": "prettier --check .",
        "fix:format": "prettier --write .",
        "check:lint": "eslint \"**/*.{js,ts,tsx}\"",
        "fix:lint": "yarn check:lint --fix",
        "test:ts": "jest",
        "test:ts:ci": "jest --ci --runInBand --reporters=default --reporters=jest-junit",
        "test:android": "yarn exec ./scripts/run-android-tests.sh",
        "test:ios": "yarn exec ./scripts/run-ios-tests.sh",
        "build": "bob build",
        "prepare": "bob build",
        "release": "yarn exec ./scripts/release.sh",
        "release:ts": "yarn release-it patch",
        "release:native": "yarn release-it minor",
        "check:all": "yarn check:ts && yarn check:format && yarn check:lint && yarn test:ts"
    },
    "keywords": [
        "react-native",
        "ios",
        "android"
    ],
    "repository": "https://github.com/FigurePOS/react-native-local-server",
    "author": "Figure <development@figure.dev> (https://github.com/FigurePOS)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/FigurePOS/react-native-local-server/issues"
    },
    "homepage": "https://github.com/FigurePOS/react-native-local-server#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "dependencies": {
        "rxjs": "7.8.1"
    },
    "devDependencies": {
        "@babel/preset-typescript": "^7.22.5",
        "@changesets/cli": "2.29.4",
        "@commitlint/config-conventional": "^11.0.0",
        "@figuredev/eslint-plugin-react-native": "3.0.2",
        "@figuredev/prettier-config": "2.2.1",
        "@react-native-community/eslint-config": "^2.0.0",
        "@release-it/conventional-changelog": "5.1.1",
        "@types/jest": "^26.0.0",
        "@types/react": "^18.2.15",
        "@types/uuid": "8.3.4",
        "babel-jest": "^29.6.1",
        "commitlint": "^11.0.0",
        "eslint": "9.26.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-prettier": "^3.1.3",
        "husky": "^6.0.0",
        "jest": "^29.6.1",
        "jest-junit": "16.0.0",
        "metro-react-native-babel-preset": "^0.72.4",
        "prettier": "3.5.3",
        "react": "16.13.1",
        "react-native": "0.72.3",
        "react-native-builder-bob": "^0.18.2",
        "release-it": "17.10.0",
        "rxjs-marbles": "6.0.1",
        "typescript": "5.9.3"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": "*",
        "react-native-get-random-values": "*",
        "uuid": "*"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "commonjs",
            "module",
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    },
    "prettier": "@figuredev/prettier-config"
}
